<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>FaceTaco</title>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- Bootstrap Icons -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" rel="stylesheet">
  <!-- My own CSS -->
  <link rel="stylesheet" href="/stylesheets/application.css">
  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
</head>

<body>
  
  <nav class="navbar bg-primary mb-3" data-bs-theme="dark">
    <div class="container">
      <a class="navbar-brand" href="/">My App</a>
      <span class="navbar-text">
            <% @user = User.find_by({ "id" => session["user_id"] }) %>
            <% if @user == nil %>
              <a href="/users/new" class="btn btn-outline-dark" >Sign Up</a>
              |
              <a href="/login" class="btn btn-outline-dark">Login</a>
            <% else %>
              Logged in as: <%= @user["first_name"] %>
              |
              <a href="/logout" >Logout</a>
            <% end %>
       </span>
    </div>
  </nav>

  <div class="container">


    <div class = "boxer">
      <h1 id="title" class = "boxer">FaceTaco</h1>
      <div>
        <a href="/posts/new/"type="button" class="btn btn-primary">New Post</a>
      </div>
    </div>

    <div>
      <%= flash["notice"] %>
    </div>
  
  <%= yield %>
  </div>
</body>
</html>
